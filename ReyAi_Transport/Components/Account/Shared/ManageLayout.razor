@inherits LayoutComponentBase
@layout AccountLayout

<h1 class="manage-title">Manage your account</h1>

<div class="account-container mt-4">
    <h2 class="account-subtitle">Change your account settings</h2>
    <hr class="divider" />
    <div class="row">
        <!-- Menú de navegación -->
        <div class="col-md-3">
            <ManageNavMenu />
        </div>
        <!-- Contenido principal -->
        <div class="col-md-9">
            <div class="content-card shadow-sm p-4 rounded">
                @Body
            </div>
        </div>
    </div>
</div>
<style>
    .manage-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ff6d3a;
        text-align: center;
    }

    .account-subtitle {
        font-size: 1.5rem;
        font-weight: 500;
        text-align: center;
        color: #00b7c5; /* Azul claro */
    }

    .divider {
        border: 0;
        height: 1px;
        background: #eaeaea;
        margin-bottom: 2rem;
    }

    .account-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .content-card {
        background-color: #ffffff;
        border: 1px solid #eaeaea;
        border-radius: 8px;
        font-size: 1rem;
        color: #333;
    }

    .shadow-sm {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

</style>