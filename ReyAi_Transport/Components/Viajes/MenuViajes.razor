@page "/Viajes/ViajesDisponible"
@inject ViajeServices ViajeService
<div class="overlay">
	<div class="tarjetas-contenedor">
		@for (int i = 0; i <= 3; i++)
		{
			<TarjetaViaje />

		}
	</div>
</div>
<style>
	body {
		font-family: Poppins, sans-serif;
		height: 120vh;
		margin: 0; 
		padding: 0 ;
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		background-image: url("/Imagenes/MenuPrincipal/RdNocturno.jpg");
	}


	.overlay {
		text-align: center;
		position: absolute;
		top: 0px;
		left: 0px;
		width: 100%;
		height: 120vh;
		background-color: rgba(0, 0, 0, 0.4);
		z-index: 1;
	}

	.tarjetas-contenedor {
		display: grid;
		grid-template-columns: repeat(3, 1fr); /* Tres columnas */
		gap: 10px; /* Espaciado entre tarjetas */
		padding: 16px;
		z-index:2;
	}

</style>



@code {
	public List<ViajesDto> ListViajes { get; set; } = new List<ViajesDto>();
	protected override async Task OnInitializedAsync()
	{
		ListViajes = await ViajeService.Listar(v => v.EstadoId == 5);
	}
}
